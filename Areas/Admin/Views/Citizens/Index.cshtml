@model IEnumerable<GovFinance.Models.Citizen>

@{
    ViewData["Title"] = "المواطنون";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Citizens" asp-action="Create">إضافة مواطن</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>الرقم الوطني</th>
            <th>الاسم الكامل</th>
            <th>البريد الإلكتروني</th>
            <th>تاريخ الميلاد</th>
            <th>العنوان</th>
            <th style="width: 260px;">إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.NationalId</td>
                <td>@c.FullName</td>
                <td>@c.ApplicationUser?.Email</td>
                <td>@(c.BirthDate.HasValue? c.BirthDate.Value.ToString("yyyy-MM-dd") : "—")</td>
                <td>@c.Address</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary"
                       asp-area="Admin" asp-controller="Citizens" asp-action="Ledger"
                       asp-route-id="@c.Id">كشف الحساب</a>

                    <a class="btn btn-sm btn-outline-secondary ms-1"
                       asp-area="Admin" asp-controller="Citizens" asp-action="Edit"
                       asp-route-id="@c.Id">تعديل</a>

                    <form asp-area="Admin" asp-controller="Citizens" asp-action="Delete"
                          asp-route-id="@c.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1"
                                onclick="return confirm('حذف هذا المواطن؟');">
                            حذف
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
