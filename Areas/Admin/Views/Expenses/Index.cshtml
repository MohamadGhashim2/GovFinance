@model IEnumerable<GovFinance.Models.Expense>
@{
    ViewData["Title"] = "كل المصاريف";
    decimal total = ViewBag.Total ?? 0m;
    string start = ViewBag.Start ?? "";
    string end = ViewBag.End ?? "";
    string q = ViewBag.Q ?? "";
}

<h1>@ViewData["Title"]</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">من تاريخ</label>
        <input type="date" name="start" value="@start" class="form-control" />
    </div>
    <div class="col-auto">
        <label class="form-label">إلى تاريخ</label>
        <input type="date" name="end" value="@end" class="form-control" />
    </div>
    <div class="col-auto">
        <label class="form-label">بحث (اسم/رقم وطني/إيميل)</label>
        <input type="text" name="q" value="@q" class="form-control" />
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-primary">تصفية</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">إعادة ضبط</a>
        <a class="btn btn-success" href="@Url.Action("ExportCsv", new { start, end, q })">تصدير CSV</a>
    </div>
</form>

<div class="alert alert-info">إجمالي المبالغ: <strong>@total.ToString("0.00")</strong></div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>التاريخ</th>
            <th>الرقم الوطني</th>
            <th>الاسم الكامل</th>
            <th>البريد الاكتروني</th>
            <th>المبلغ</th>
            <th>النوع</th>
            <th>ملاحظات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Date.ToString("yyyy-MM-dd")</td>
                <td>@e.Citizen?.NationalId</td>
                <td>@e.Citizen?.FullName</td>
                <td>@e.Citizen?.ApplicationUser?.Email</td>
                <td>@e.Amount.ToString("0.00")</td>
                <td>@e.Category</td>
                <td>@e.Notes</td>
            </tr>
        }
    </tbody>
</table>
