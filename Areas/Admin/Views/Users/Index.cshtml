@model IEnumerable<GovFinance.Models.User>

@{
    ViewData["Title"] = "المواطنون";
}

<h1>@ViewData["Title"]</h1>


<table class="table table-striped" id="UsersTable">
    <thead>
        <tr>
            <th>الرقم الوطني</th>
            <th>الاسم الكامل</th>
            <th>البريد الإلكتروني</th>

            <th style="width: 260px;">إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td data-order="@c.UserId">@c.UserId</td>
                <td data-order="@c.FullName">@c.FullName</td>
                <td data-order="@c.ApplicationUser?.Email">@c.ApplicationUser?.Email</td>
           
 
                <td>
                    <a class="btn btn-sm btn-outline-primary"
                       asp-area="Admin" asp-controller="Users" asp-action="Ledger"
                       asp-route-id="@c.Id">كشف الحساب</a>

                    <form asp-area="Admin" asp-controller="Users" asp-action="Delete"
                          asp-route-id="@c.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1"
                                onclick="return confirm('حذف هذا المستخدم؟');">
                            حذف
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        (function () {
            const params = new URLSearchParams(location.search);
            const len = parseInt(params.get('len') || '10', 10);
            const pageLen = (isFinite(len) && len > 0) ? len : 10;

            new DataTable('#UsersTable', {
                responsive: true,
                deferRender: true,
                pageLength: pageLen,
                lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, 'الكل']],
                order: [[1, 'desc']],
                language: {
                    search: 'بحث:',
                    lengthMenu: 'عرض _MENU_',
                    info: 'إظهار _START_–_END_ من _TOTAL_',
                    infoEmpty: 'لا توجد سجلات',
                    zeroRecords: 'لا نتائج',
                    paginate: { first: 'الأول', last: 'الأخير', next: 'التالي', previous: 'السابق' }
                }
            });
        })();
    </script>
}
