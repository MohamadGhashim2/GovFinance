@model GovFinance.Models.ViewModels.AdminUserLedgerVm
@{
    ViewData["Title"] = "كشف حساب المواطن";
}

<h2>@ViewData["Title"]</h2>

<div class="card mb-3">
    <div class="card-body">
        <div><strong>الاسم:</strong> @Model.FullName</div>
        <div><strong>الرقم الوطني:</strong> @Model.UserId</div>
        <div><strong>الإيميل:</strong> @Model.Email</div>
    </div>
</div>

<form method="get" class="row g-2 mb-3">
    <input type="hidden" name="id" value="@Model.UserId" />
    <div class="col-auto">
        <label class="form-label">من تاريخ</label>
        <input type="date" class="form-control" name="start" value="@Model.Start" />
    </div>
    <div class="col-auto">
        <label class="form-label">إلى تاريخ</label>
        <input type="date" class="form-control" name="end" value="@Model.End" />
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-primary">تصفية</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Ledger", new { id = Model.UserId })">إعادة ضبط</a>
        <a class="btn btn-success" href="@Url.Action("ExportLedgerCsv", new { id = Model.UserId, start = Model.Start, end = Model.End, type = "all" })">تصدير CSV (الكل)</a>
        <a class="btn btn-outline-success" href="@Url.Action("ExportLedgerCsv", new { id = Model.UserId, start = Model.Start, end = Model.End, type = "incomes" })">CSV دخل</a>
        <a class="btn btn-outline-success" href="@Url.Action("ExportLedgerCsv", new { id = Model.UserId, start = Model.Start, end = Model.End, type = "expenses" })">CSV مصروف</a>
    </div>
</form>

<div class="row g-2 mb-3">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">إجمالي الدخل</div>
                <div class="fs-5">@Model.TotalIncome.ToString("0.00")</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">إجمالي المصروف</div>
                <div class="fs-5">@Model.TotalExpense.ToString("0.00")</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">الصافي (دخل - مصروف)</div>
                <div class="fs-5">@Model.Net.ToString("0.00")</div>
            </div>
        </div>
    </div>
</div>

<h4>الدخل</h4>
<table class="table table-striped mb-4">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Source</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Incomes)
        {
            <tr>
                <td>@i.Date.ToString("yyyy-MM-dd")</td>
                <td>@i.Amount.ToString("0.00")</td>
                <td>@i.Source</td>
                <td>@i.Notes</td>
            </tr>
        }
    </tbody>
</table>

<h4>المصروف</h4>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model.Expenses)
        {
            <tr>
                <td>@e.Date.ToString("yyyy-MM-dd")</td>
                <td>@e.Amount.ToString("0.00")</td>
                
                <td>@e.Notes</td>
            </tr>
        }
    </tbody>
</table>
