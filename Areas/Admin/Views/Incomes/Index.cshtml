@model IEnumerable<GovFinance.Models.Income>
@{
    ViewData["Title"] = "كل الدخل";
    decimal total = ViewBag.Total ?? 0m;
    string start = ViewBag.Start ?? "";
    string end = ViewBag.End ?? "";
    string q = ViewBag.Q ?? "";
}

<h1>@ViewData["Title"]</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">من تاريخ</label>
        <input type="date" name="start" value="@start" class="form-control" />
    </div>
    <div class="col-auto">
        <label class="form-label">إلى تاريخ</label>
        <input type="date" name="end" value="@end" class="form-control" />
    </div>
    <div class="col-auto">
        <label class="form-label">بحث (اسم/رقم وطني/إيميل)</label>
        <input type="text" name="q" value="@q" class="form-control" placeholder="Full name / NationalId / Email" />
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-primary">تصفية</button>
        <a class="btn btn-outline-secondary" href="@Url.Action("Index")">إعادة ضبط</a>
        <a class="btn btn-success" href="@Url.Action("ExportCsv", new { start, end, q })">تصدير CSV</a>
    </div>
</form>

<div class="alert alert-info">إجمالي المبالغ: <strong>@total.ToString("0.00")</strong></div>

<table class="table table-striped" id="UsersTable">
    <thead>
        <tr>
            
            <th>الرقم الوطني</th>
            <th>التاريخ</th>
            <th>الاسم الكامل</th>
            <th>البريد الاكتروني</th>
            <th>المبلغ</th>
            <th>مصدر الدخل</th>
            <th>ملاحظات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.User?.UserId</td>
                <td>@i.Date.ToString("yyyy-MM-dd")</td>
                <td>@i.User?.FullName</td>
                <td>@i.User?.ApplicationUser?.Email</td>
                <td>@i.Amount.ToString("0.00")</td>
                <td>@i.Source</td>
                <td>@i.Notes</td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        (function () {
            const params = new URLSearchParams(location.search);
            const len = parseInt(params.get('len') || '10', 10);
            const pageLen = (isFinite(len) && len > 0) ? len : 10;

            new DataTable('#UsersTable', {
                responsive: true,
                deferRender: true,
                pageLength: pageLen,
                lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, 'الكل']],
                order: [[1, 'desc']],
                language: {
                    search: 'بحث:',
                    lengthMenu: 'عرض _MENU_',
                    info: 'إظهار _START_–_END_ من _TOTAL_',
                    infoEmpty: 'لا توجد سجلات',
                    zeroRecords: 'لا نتائج',
                    paginate: { first: 'الأول', last: 'الأخير', next: 'التالي', previous: 'السابق' }
                }
            });
        })();
    </script>
}