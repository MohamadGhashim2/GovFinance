@page
@model LoginModel
@{
    ViewData["Title"] = "تسجيل الدخول";
    Layout = "/Views/Shared/_Layout.cshtml"; // استخدم الـLayout الرئيسي
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="content-card content-halo p-0 overflow-hidden">
				
                <div class="row g-0">
                    <!-- اللوحة الجانبية (تعريف بسيط) -->
                    <div class="col-md-6 d-none d-md-flex align-items-center justify-content-center text-center text-white"
                         style="background:
                                radial-gradient(80% 60% at 50% 30%, rgba(255,255,255,.22), rgba(255,255,255,0) 70%),
                                linear-gradient(135deg, rgba(255,255,255,.08), rgba(255,255,255,.02)),
                                var(--brand-bg); padding:3rem;">
                        <div style="max-width: 380px;">
                            <img src="~/img/govfinance_logo-trans2.png"style="width:250px; height:auto" alt="GovFinance" class="brand-logo mb-3" />
                            <h2 class="fw-bold mb-2">مرحبًا بك</h2>
                            <p class="mb-3">
                                سجّل دخولك لإدارة <strong>المدخول</strong> و<strong>المصروف</strong> بسهولة.
                            </p>
                            <p class="small mb-0 opacity-75">
                                للمستخدمين الجدد: يمكنك إنشاء حساب كمواطن أو كحكومة من شاشة التسجيل.
                            </p>
                        </div>
                    </div>

                    <!-- نموذج تسجيل الدخول -->
                    <div class="col-12 col-md-6 p-4 p-md-5">
                        <h3 class="mb-3">تسجيل الدخول</h3>

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl" asp-antiforgery="true">
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username"  />
                                <label asp-for="Input.Email">البريد الإلكتروني</label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password"  />
                                <label asp-for="Input.Password">كلمة المرور</label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="d-flex align-items-center justify-content-between mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                    <label class="form-check-label" asp-for="Input.RememberMe">تذكرني</label>
                                </div>
                                <a class="small" asp-page="./ForgotPassword">نسيت كلمة المرور؟</a>
                            </div>

                            <button id="login-submit" type="submit" class="btn btn-primary w-100 mb-3">
                                دخول
                            </button>

                            <div class="text-center small text-muted">
                                مستخدم جديد؟
                                <a asp-area="" asp-controller="Auth" asp-action="ChooseRole">إنشاء حساب</a>
                            </div>
                        </form>

                        @* تسجيل عبر خدمات خارجية إن كانت مفعلة *@
                        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                        {
                            <hr class="my-4" />
                            <div>
                                <div class="text-center mb-2 small text-muted">أو سجّل عبر خدمة خارجية</div>
                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                    <div class="d-grid gap-2">
                                        @foreach (var provider in Model.ExternalLogins!)
                                        {
                                            <button type="submit" class="btn btn-outline-primary"
                                                    name="provider" value="@provider.Name"
                                                    title="Log in using your @provider.DisplayName account">
                                                @provider.DisplayName
                                            </button>
                                        }
                                    </div>
                                </form>
                            </div>
                        }

                        <div class="mt-3 text-center small">
                            <a asp-page="./ResendEmailConfirmation">إعادة إرسال تأكيد البريد</a>
                        </div>
                    </div>
                </div> <!-- /row -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
