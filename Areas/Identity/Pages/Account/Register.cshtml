@page
@model RegisterModel
@using GovFinance.Models
@{
    ViewData["Title"] = "Register";

    // الدور القادم من الاستعلام ?role=Citizen|Admin أو الافتراضي مواطن
    var role = Model.Role ?? Roles.Citizen;
    var isAdmin = string.Equals(role, Roles.Admin, System.StringComparison.OrdinalIgnoreCase);
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-5">
        <form id="registerForm"
              method="post"
              asp-route-returnUrl="@Model.ReturnUrl"
              asp-route-role="@role"
              asp-antiforgery="true">

            <div class="mb-2">
                <span class="badge @(isAdmin ? "bg-danger" : "bg-primary")">
                    @(isAdmin ? "Admin (Government)" : "Citizen")
                </span>
            </div>

            <!-- نحفظ الدور المختار داخل الطلب -->
            <input type="hidden" asp-for="Role" value="@role" />

            <hr />
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email"
                       class="form-control"
                       autocomplete="username"
                       placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password"
                       class="form-control"
                       type="password"
                       autocomplete="new-password"
                       placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword"
                       class="form-control"
                       type="password"
                       autocomplete="new-password"
                       placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            @* يظهر فقط عند التسجيل كحكومة *@
            @if (isAdmin)
            {
                <div class="mb-3">
                    <label asp-for="Input.AdminInviteCode" class="form-label">Admin invite code</label>
                    <input asp-for="Input.AdminInviteCode" class="form-control" placeholder="Enter admin code" />
                    <div class="form-text">اطلب هذا الرمز من مسؤول النظام.</div>
                    <span asp-validation-for="Input.AdminInviteCode" class="text-danger"></span>
                </div>
            }

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>

            <div class="mt-3 d-flex gap-2">
                <a class="btn btn-outline-secondary flex-fill"
                   asp-controller="Auth" asp-action="ChooseRole">Back to role chooser</a>
                <a class="btn btn-link flex-fill"
                   asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" asp-route-role="@role">Already have an account? Log in</a>
            </div>
        </form>
    </div>

    <div class="col-md-6 offset-md-1">
        <section>
            <h3>Use another service to register</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div class="text-muted">
                        No external authentication services configured.
                        See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article</a>.
                    </div>
                }
                else
                {
                    <form id="external-account"
                          asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          asp-route-role="@role"
                          method="post" class="form-horizontal">
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit"
                                        class="btn btn-outline-primary me-2 mb-2"
                                        name="provider" value="@provider.Name"
                                        title="Register using your @provider.DisplayName account">
                                    @provider.DisplayName
                                </button>
                            }
                        </p>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
