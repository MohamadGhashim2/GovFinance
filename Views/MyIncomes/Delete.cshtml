    <h4>Income</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           اسم المواطن
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.ApplicationUserId)
        </dd>
        <dt class = "col-sm-2">
            المبلغ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
