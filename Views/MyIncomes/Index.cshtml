@model IEnumerable<GovFinance.Models.Income>
@{
    ViewData["Title"] = "مدخولاتي";
    decimal totalAll = ViewBag.TotalAll ?? 0m;
    decimal totalMonth = ViewBag.TotalMonth ?? 0m;
    decimal totalYear = ViewBag.TotalYear ?? 0m;
}
<h1>@ViewData["Title"]</h1>

<div class="row g-2 mb-3">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">دخل هذا الشهر</div>
                <div class="fs-5">@totalMonth.ToString("0.00")</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">دخل هذه السنة</div>
                <div class="fs-5">@totalYear.ToString("0.00")</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">إجمالي كل الوقت</div>
                <div class="fs-5">@totalAll.ToString("0.00")</div>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Amount</th>
            <th>Source</th>
            <th>Date</th>
            <th>Notes</th>
            <th style="width:160px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Amount.ToString("0.00")</td>
                <td>@item.Source</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.Notes</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info ms-1">Details</a>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger ms-1"
                                onclick="return confirm('Delete this income?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
