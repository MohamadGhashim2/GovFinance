@model GovFinance.Models.Income

@{
    ViewData["Title"] = "Create Income";
    TempData["Toast"] = "تم الحفظ بنجاح";

}
<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post" asp-antiforgery="true">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label">المبلغ</label>
        <input asp-for="Amount" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Source" class="control-label">مصدر الدخل</label>
        <input asp-for="Source" class="form-control" />
        <span asp-validation-for="Source" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date" class="control-label">التاريخ</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label">ملاحظات</label>
        <input asp-for="Notes" class="form-control" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">إضافة</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">العودة إلى القائمة</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
