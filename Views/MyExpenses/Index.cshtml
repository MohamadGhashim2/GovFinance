@model IEnumerable<GovFinance.Models.Expense>
@using System.Globalization

@{
    ViewData["Title"] = "مصروفي";
    decimal totalAll = ViewBag.TotalAll ?? 0m;
    decimal totalMonth = ViewBag.TotalMonth ?? 0m;
    decimal totalYear = ViewBag.TotalYear ?? 0m;
    var inv = CultureInfo.InvariantCulture;
}

<h1>@ViewData["Title"]</h1>

<div class="row g-2 mb-3">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">مصروف هذا الشهر</div>
                <div class="fs-5 latin-digits">@Html.Money(totalMonth)</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">مصروف هذه السنة</div>
                <div class="fs-5 latin-digits">@Html.Money(totalYear)</div>
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <div class="h6">إجمالي كل الوقت</div>
                <div class="fs-5 latin-digits">@Html.Money(totalAll)</div>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">أضف مصروف جديد</a>
</p>

<div class="table-responsive">
    <table id="expensesTable" class="table table-hover align-middle">
        <thead>
            <tr>
                <th>ID</th>
                <th>المصدر</th>
                <th class="text-end">المبلغ</th>
                <th class="text-end">المدفوع</th>
                <th class="text-end">المتبقّي</th>
                <th style="width:130px">التاريخ</th>
                <th>ملاحظات</th>
                <th style="width:160px">إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var outstanding = item.Amount - item.PaidAmount;
                <tr>
                    <!-- ID -->
                    <td class="text-muted small latin-digits" data-order="@item.Id">@item.Id</td>

                    <td>@item.Source</td>

                    <td class="text-end" data-order="@item.Amount">@item.Amount.ToString("N2")</td>
                    <td class="text-end" data-order="@item.PaidAmount">@item.PaidAmount.ToString("N2")</td>

                    <td class="text-end" data-order="@(outstanding)">
                        @if (outstanding > 0)
                        {
                            <span class="badge bg-warning text-dark">@outstanding.ToString("N2")</span>
                        }
                        else
                        {
                            <span class="text-muted">0.00</span>
                        }
                    </td>

                    <td data-order="@item.Date.ToString("yyyyMMdd")">
                        @item.Date.ToString("yyyy-MM-dd")
                    </td>

                    <td class="text-truncate" style="max-width:260px;">
                        @item.Notes
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">تعديل</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info ms-1">تفاصيل</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger ms-1"
                                    onclick="return confirm('هل أنت متأكد؟');">
                                حذف
                            </button>
                        </form>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        (function () {
            const params = new URLSearchParams(location.search);
            const len = parseInt(params.get('len') || '10', 10);
            const pageLen = (isFinite(len) && len > 0) ? len : 10;

            new DataTable('#expensesTable', {
                responsive: true,
                deferRender: true,
                pageLength: pageLen,
                lengthMenu: [[10, 20, 50, 100, -1], [10, 20, 50, 100, 'الكل']],
                order: [[5, 'desc']], 
                language: {
                    search: 'بحث:',
                    lengthMenu: 'عرض _MENU_',
                    info: 'إظهار _START_–_END_ من _TOTAL_',
                    infoEmpty: 'لا توجد سجلات',
                    zeroRecords: 'لا نتائج',
                    paginate: { first: 'الأول', last: 'الأخير', next: 'التالي', previous: 'السابق' }
                }
            });
        })();
    </script>
}
