@model GovFinance.Models.Expense
@using System.Globalization
@{
    ViewData["Title"] = "تفاصيل المصروف";
    var inv = CultureInfo.InvariantCulture;
    var outstanding = Model.Amount - Model.PaidAmount;
}

<h1 class="h4 mb-3">تفاصيل المصروف</h1>

<div class="card content-card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <div class="mb-2"><span class="text-muted">المصدر:</span> <strong>@Model.Source</strong></div>
                <div class="mb-2"><span class="text-muted">التاريخ:</span> <span class="latin-digits">@Model.Date.ToString("yyyy-MM-dd")</span></div>
                <div class="mb-2"><span class="text-muted">ملاحظات:</span> <span>@Model.Notes</span></div>
            </div>
            <div class="col-md-6">
                <div class="row text-center">
                    <div class="col">
                        <div class="text-muted">المبلغ</div>
                        <div class="h5 latin-digits">@Model.Amount.ToString("0.00", inv)</div>
                    </div>
                    <div class="col">
                        <div class="text-muted">المقبوض</div>
                        <div class="h5 latin-digits">@Model.PaidAmount.ToString("0.00", inv)</div>
                    </div>
                    <div class="col">
                        <div class="text-muted">المتبقّي</div>
                        <div class="h5">
                            @if (outstanding > 0)
                            {
                                <span class="badge bg-warning text-dark latin-digits">@outstanding.ToString("0.00", inv)</span>
                            }
                            else
                            {
                                <span class="badge bg-success latin-digits">0.00</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">تعديل</a>
            <a asp-action="Index" class="btn btn-outline-secondary">رجوع</a>
        </div>
    </div>
</div>
